{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/1v/profile/{email}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "profile-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/profiles/{email}",
      "UpstreamHttpMethod": [ "Get" ],
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      }
    },
    {
      "DownstreamPathTemplate": "/api/1v/auth/login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identity-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/login",
      "UpstreamHttpMethod": [ "Post" ],
      "LoadBalancerOptions": {
        "Type": "CookieStickySessions"
      }
    },
    {
      "DownstreamPathTemplate": "/api/1v/identites",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identity-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/register",
      "UpstreamHttpMethod": [ "Post" ],
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "1s",
        "PeriodTimespan": 1,
        "Limit": 1
      },
      "LoadBalancerOptions": {
        "Type": "CookieStickySessions"
      }
    },
    {
      "DownstreamPathTemplate": "/api/1v/profile",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "profile-service",
          "Port": 8080
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "UpstreamPathTemplate": "/profiles",
      "UpstreamHttpMethod": [ "Put" ],
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "1s",
        "PeriodTimespan": 1,
        "Limit": 1
      },
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      }
    },
    {
      "DownstreamPathTemplate": "/api/1v/tweet",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "tweet-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/tweets",
      "UpstreamHttpMethod": [ "Post" ],
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "1s",
        "PeriodTimespan": 5,
        "Limit": 1
      },
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "RouteClaimsRequirement": {
        "Role": [ "User", "Admin", "Moderator" ]
      }
    },
    {
      "DownstreamPathTemplate": "/api/1v/identites/{email}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identity-service",
          "Port": 8080
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "UpstreamPathTemplate": "/identites/{email}",
      "UpstreamHttpMethod": [ "Delete" ],
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "1s",
        "PeriodTimespan": 5,
        "Limit": 1
      },
      "LoadBalancerOptions": {
        "Type": "CookieStickySessions"
      },
      "RouteClaimsRequirement": {
        "Role": [ "Admin", "Moderator" ]
      }
    },
    {
      "DownstreamPathTemplate": "/api/1v/identites/{pageNumber}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identity-service",
          "Port": 8080
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "UpstreamPathTemplate": "/identites/{pageNumber}",
      "UpstreamHttpMethod": [ "Get" ],
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "1s",
        "PeriodTimespan": 1,
        "Limit": 2
      },
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "RouteClaimsRequirement": {
        "Role": [ "Admin", "Moderator" ]
      }
    }
  ],
  "GlobalConfiguration": {
    "RequestIdKey": "OcRequestId",
    "RateLimitOptions": {
      "DisableRateLimitHeaders": false,
      "QuotaExceededMessage": "You reached the rate limit.",
      "HttpStatusCode": 429,
      "ClientIdHeader": "Test"
    }
  }
}